{
    "name": "yiisoft/db-mongodb",
    "description": "Yii Framework MongoDB extension",
    "keywords": [
        "yii",
        "mongo",
        "mongodb",
        "gridfs"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/db-mongodb/issues?state=open",
        "source": "https://github.com/yiisoft/db-mongodb",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "ircs://irc.libera.chat:6697/yii",
        "chat": "https://t.me/yii3en"
    },
    "funding": [
        {
            "type": "opencollective",
            "url": "https://opencollective.com/yiisoft"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/yiisoft"
        }
    ],
    "authors": [
        {
            "name": "Paul Klimov",
            "email": "klimov.paul@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mongodb": ">=1.8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "roave/infection-static-analysis-plugin": "^1.6",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^5.20",
        "yiisoft/arrays": "^2.0|^3.0",
        "yiisoft/cache": "^1.0",
        "yiisoft/di": "dev-master",
        "yiisoft/factory": "^1.0",
        "yiisoft/log": "^1.0",
        "yiisoft/strings": "^2.0",
        "yiisoft/var-dumper": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Db\\MongoDb\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Db\\MongoDb\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
